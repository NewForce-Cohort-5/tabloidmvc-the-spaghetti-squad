@model IEnumerable<TabloidMVC.Models.UserProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>Active Users</h1>


<p>
    <a asp-action="DeactiveList">View Deactivated User Profiles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                Display Name
            </th>
           
            <th>
                User Type
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType.Name)
            </td>
          
            <td>
                @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                <a asp-route-id = "@item.Id" asp-area="" asp-controller="Account" asp-action="UserTypeEdit">Edit</a> |

                @Html.ActionLink("Deactivate", "Delete", new { id=item.Id  })
                          </td>
        </tr>
}
    </tbody>
</table>
